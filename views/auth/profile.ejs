<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
</head>

<body>

    <h1>
        <%= user.name %>'s Profile
    </h1>
    <p><strong>user</strong>
        <%= user.name %>
    </p>

    <h2>Edit Your Profile:</h2>
    <form action="/auth/profile/edit" method="POST">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="<%= user.name %>">
        <button type="submit">Update Profile</button>
    </form>

    <h2>Your Schools:</h2>
    <ul>
        <% schools.forEach(school=> { %>
            <li>
                <%= school.name %> - <%= school.address %>
                        <form action="/auth/profile/delete-school" method="POST" style="display:inline;">
                            <input type="hidden" name="schoolId" value="<%= school.id %>">
                            <button type="submit">Delete</button>
                        </form>
            </li>
            <% }) %>
    </ul>

    <h2>Add a School to Your Profile:</h2>
    <form action="auth/profile/add-school" method="POST">
        <select name="schoolId">
            <% schools.forEach(school=> { %>
                <option value="<%= school.id %>">
                    <%= school.name %>
                </option>
                <% }) %>
        </select>
        <button type="submit">Add School</button>
    </form>

</body>

</html>